<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studenttowerdefense">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".nl.int6.studenttowerdefense.view.MapView"
            android:parentActivityName=".MainActivity"
            android:label="@string/Map_Selection">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity android:name=".nl.int6.studenttowerdefense.GameView"
            android:parentActivityName=".nl.int6.studenttowerdefense.view.MapView"
            android:label="@string/Student_Tower_Defense">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".nl.int6.studenttowerdefense.view.MapView"/>
        </activity>
        <activity android:name=".nl.int6.studenttowerdefense.view.HighScoreView"
            android:parentActivityName=".MainActivity"
            android:label="@string/high_scores">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity android:name=".nl.int6.studenttowerdefense.view.SettingsView"
            android:parentActivityName=".MainActivity"
            android:label="@string/settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity android:name=".nl.int6.studenttowerdefense.view.RuleView"
            android:parentActivityName=".MainActivity"
            android:label="@string/rules">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity"/>
        </activity>
    </application>

</manifest>